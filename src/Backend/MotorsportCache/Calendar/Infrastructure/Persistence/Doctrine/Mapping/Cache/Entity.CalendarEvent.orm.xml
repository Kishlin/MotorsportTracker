<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Kishlin\Backend\MotorsportCache\Calendar\Domain\Entity\CalendarEvent" table="calendar_events">
        <id name="id" type="uuid_value_object" column="id" length="36" />

        <field name="slug" type="string_value_object" column="slug" unique="true" />

        <field name="index" type="positive_int_value_object" column="index" min="0" />

        <field name="name" type="string_value_object" column="name" />

        <field name="shortName" type="nullable_string_value_object" column="short_name" nullable="true" />

        <field name="startDate" type="nullable_date_time_value_object" column="start_date" nullable="true" />

        <field name="endDate" type="nullable_date_time_value_object" column="end_date" nullable="true" />

        <field name="series" type="calendar_event_series" column="series" />

        <field name="venue" type="calendar_event_venue" column="venue" />

        <field name="sessions" type="calendar_event_sessions" column="sessions" />
    </entity>

</doctrine-mapping>
