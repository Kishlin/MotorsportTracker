<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Kishlin\Backend\MotorsportTracker\Standing\Domain\Entity\DriverStanding" table="driver_standings">
        <id name="id" type="driver_standing_id" column="id" length="36" />

        <field name="eventId" type="driver_standing_event_id" column="event" length="36" />

        <field name="driverId" type="driver_standing_driver_id" column="driver" length="36" />

        <field name="points" type="driver_standing_points" column="points" min="0" />

        <unique-constraints>
            <unique-constraint columns="event,driver" name="driver_standing_event_driver_idx" />
        </unique-constraints>
    </entity>

</doctrine-mapping>
