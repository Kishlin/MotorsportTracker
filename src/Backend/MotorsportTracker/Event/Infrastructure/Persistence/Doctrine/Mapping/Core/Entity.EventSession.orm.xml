<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Kishlin\Backend\MotorsportTracker\Event\Domain\Entity\EventSession" table="event_sessions">
        <id name="id" type="uuid_value_object" column="id" length="36" />

        <field name="eventId" type="uuid_value_object" column="event" length="36" />

        <field name="typeId" type="uuid_value_object" column="type" length="36" />

        <field name="slug" type="string_value_object" column="slug" unique="true" />

        <field name="hasResult" type="bool_value_object" column="has_result" />

        <field name="startDate" type="nullable_date_time_value_object" column="start_date" nullable="true" />

        <field name="endDate" type="nullable_date_time_value_object" column="end_date" nullable="true" />

        <unique-constraints>
            <unique-constraint columns="event,type" name="event_session_event_type_idx" />
        </unique-constraints>
    </entity>

</doctrine-mapping>
