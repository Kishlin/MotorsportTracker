<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Kishlin\Backend\MotorsportTracker\Car\Domain\Entity\DriverMove" table="driver_moves">
        <id name="id" type="driver_move_id" column="id" length="36" />

        <field name="driverId" type="driver_move_driver_id" column="driver" length="36" />

        <field name="carId" type="driver_move_car_id" column="car" length="36" />

        <field name="date" type="driver_move_date" column="date" />

        <unique-constraints>
            <unique-constraint columns="driver,date" name="driver_move_driver_date_idx" />
            <unique-constraint columns="car,date" name="driver_move_car_date_idx" />
        </unique-constraints>
    </entity>

</doctrine-mapping>
