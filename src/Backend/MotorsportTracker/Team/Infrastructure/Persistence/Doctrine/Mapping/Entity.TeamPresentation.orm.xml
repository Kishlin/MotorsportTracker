<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Kishlin\Backend\MotorsportTracker\Team\Domain\Entity\TeamPresentation" table="team_presentations">
        <id name="id" type="team_presentation_id" column="id" length="36" />

        <field name="teamId" type="team_presentation_team_id" column="team" length="36"/>

        <field name="name" type="team_presentation_name" column="name" />

        <field name="image" type="team_presentation_image" column="image" />

        <field name="createdOn" type="team_presentation_created_on" column="created_on" />

        <unique-constraints>
            <unique-constraint columns="team,created_on" name="team_presentation_team_created_on_idx" />
        </unique-constraints>
    </entity>

</doctrine-mapping>
